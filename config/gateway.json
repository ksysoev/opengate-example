{
  "openapi": "3.1.0",
  "info": {
    "title": "JSONPlaceholder Gateway API",
    "version": "1.0.0",
    "description": "OpenGate API Gateway proxying requests to JSONPlaceholder - a free fake API for testing and prototyping"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local OpenGate gateway"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Get all posts",
        "description": "Retrieves a list of all posts from JSONPlaceholder",
        "operationId": "get-posts",
        "tags": ["Posts"],
        "x-opengate": {
          "type": "forward",
          "options": {
            "url": "https://jsonplaceholder.typicode.com"
          }
        },
        "responses": {
          "200": {
            "description": "A list of posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "userId": {
                        "type": "integer"
                      },
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "body": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "description": "Creates a new post in JSONPlaceholder (fake operation - no actual data is stored)",
        "operationId": "create-post",
        "tags": ["Posts"],
        "x-opengate": {
          "type": "forward",
          "options": {
            "url": "https://jsonplaceholder.typicode.com"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  },
                  "userId": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "title": {
                      "type": "string"
                    },
                    "body": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Get post by ID",
        "description": "Retrieves a specific post by its ID from JSONPlaceholder",
        "operationId": "get-post-by-id",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the post to retrieve",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "x-opengate": {
          "type": "forward",
          "options": {
            "url": "https://jsonplaceholder.typicode.com"
          }
        },
        "responses": {
          "200": {
            "description": "Post details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "integer"
                    },
                    "id": {
                      "type": "integer"
                    },
                    "title": {
                      "type": "string"
                    },
                    "body": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users",
        "description": "Retrieves a list of all users from JSONPlaceholder",
        "operationId": "get-users",
        "tags": ["Users"],
